<html>
  <head>
    <style>
      body{
        display: flex;
          align-items: center;
          justify-content: center;
      }
      .container {
          width: 75vw;
          height: 100vh;
          border: 60%, 40%, 60%, 40%;
          display: flex;
          align-items: center;
          justify-content: center;
          border-radius: 15px;
          background-color: rgb(77, 82, 82);
      }
      .main{
        width: 30vw;
        height: 60vh;
        padding: 40px;
        background-color: rgb(197, 197, 197);
        border-radius: 15px;
        border: 2px solid black;
      }
      </style>
      </head>
  <body>
    <div class="container">
      <div class="main">
    <h1>Cadastro de Cliente</h1>
    <form action="/client/cadastro/save" method="POST">
      <label>Nome:</label>
      <input type="text" name="nome"><br>
      <label>Idade:</label>
      <input type="number" name="idade"><br>
      <label>CPF:</label>
      <input type="text" name="cpf"><br>
      <label>Endere√ßo:</label>
      <input type="text" name="endereco"><br>
      <input type="submit" value="cadastro">
    </form>
    <% if(mensagem) { %>
      <p>
        <label style="color: red"><%= mensagem %></label>
      </p>
    <% } %>
      </div>
    </div>
  </body>
</html>